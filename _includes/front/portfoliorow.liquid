<!-- Frontpage Portfolio Grid Section -->

  <div class="coolrow">
      <div class="coolrow-teaser">
        <h1 class="title">Mes travaux</h1>
				<div class="col text-center">
				
<div class="portfolio-grid portfoliogridonfrontpage">
	{% assign sorted = site.portfolio | sort: "date" | reverse %}
    {% for item in sorted limit:3 %}
    <div class="portfolio-cell">
        <a class="portfolio-link" data-keyboard="true" href="{{ item.url | relative_url }}">
            <div class="caption" title="{{ item.title }}">
                <div class="caption-content">
                    <i class="fas fa-search-plus fa-3x"></i>
                </div>
            </div>
            <img alt="" class="" src="{{ item.img | relative_url }}">
        </a>
    </div>
    {% endfor %}
</div>

				</div>
		<div class="bootstrap-iso">
          <div class="container">
			<div class="row">
				<div class="col text-center">
                <a href="/travaux/"><button type="button" class="btn btn-primary">Explorer mon portfolio</button></a>
				</div>
			</div>
        </div>
		</div>
		</div>
	</div>
